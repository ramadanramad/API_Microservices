APP_NAME="TuneTrail Gateway"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=tunetrail_gateway
DB_USERNAME=root
DB_PASSWORD=

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Microservices URLs
PROFILE_SERVICE_URL=http://localhost:8001
PLAYLIST_SERVICE_URL=http://localhost:8002
SOCIAL_SERVICE_URL=http://localhost:8003
MEDIA_SERVICE_URL=http://localhost:8004
COMMENT_SERVICE_URL=http://localhost:8005
ANALYTICS_SERVICE_URL=http://localhost:8006

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Cache TTL (seconds)
AUTH_CACHE_TTL=300
METRICS_CACHE_TTL=60
